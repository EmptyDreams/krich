.krich *:not(.disable) .select
  &:after
    content 'â–¼'

  & > .items
    display none
    position absolute
    left 0
    top 35px
    animation krich-enter .3s ease-in-out
    padding 11px
    width 85px
    z-index 2

    & > div
      padding 3px 10px
      border-radius 5px
      transition all .3s

      &:hover
        background var(--krich-tools-hover)

  &:hover
    .items
      display flex
      flex-direction column
      align-items center
      padding 10px 16px
      border-radius 12px
      background var(--krich-card-background)
      box-shadow var(--krich-card-shadow)

.panel
  z-index 2

@keyframes krich-enter
  0%
    opacity 0
  to
    opacity 1