.krich-editor
  position relative
  width 100%
  min-height 350px
  max-height 600px
  overflow-y auto
  padding 10px
  outline none
  border-radius 10px
  border 1px solid #f1f1f1
  box-shadow var(--krich-card-shadow)
  box-sizing border-box
  white-space pre-wrap

  p
    line-height 23px
    margin 5px 0

  blockquote
    white-space pre-wrap

  pre
    code
      display block
      width 100%
      min-height 20px
      hyphens none

  .tmp
    margin 0
    padding 0
    display inline-block